    </section>
    <section name="order_creditmemo">
        <group name="totals">
            <item name="ds_giftcard" instance="Dotsquare\Giftcard\Model\Sales\Totals\Creditmemo" sort_order="1000"/>
        </group>
    </section>
    <order>
        <available_product_type name="ds_giftcard"/>
    </order>
</config>
